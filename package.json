{
  "name": "express-htmx",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "tsc": "tsc",
    "clean-dist": "rm -rf ./dist && mkdir ./dist",
    "copy-static": "cp -r ./static-files/* ./dist",
    "start": "npm run clean-dist && npm run tsc && npm run copy-static && node ./dist/server.js",
    "dev": "nodemon --exec 'npm start' --watch ./src/* --watch ./static-files/views/* --watch ./static-files/views/layouts/* --watch ./static-files/*"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "express": "^4.21.1",
    "express-handlebars": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "nodemon": "^3.1.7"
  }
}
